{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "newLine": "lf",
    "sourceMap": true,
    "jsxImportSource": "solid-js",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true,
    "types": [
      "node"
    ],
    "noEmit": true
  },
  "include": ["types.ts", "scripts"],
  "exclude": ["node_modules/"]
}